#!/usr/bin/env sh

# Prevent direct push to main/master branch
branch="$(git rev-parse --abbrev-ref HEAD)"

if [ "$branch" = "main" ] || [ "$branch" = "master" ]; then
  echo "âŒ Direct push to '$branch' is not allowed!"
  echo ""
  echo "Please create a feature branch and submit a pull request:"
  echo "  git checkout -b feature/your-feature-name"
  echo "  git push -u origin feature/your-feature-name"
  echo ""
  exit 1
fi

echo "ğŸ” Running unit tests with 100% coverage requirement..."

npm run test:coverage

RESULT=$?

if [ $RESULT -ne 0 ]; then
  echo "âŒ Commit blocked: Coverage must be 100%"
  exit 1
fi

echo "âœ… Coverage is 100%. Commit allowed."

echo "âœ… Pushing branch '$branch'..."
